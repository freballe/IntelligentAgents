<?xml version="1.0" encoding="ISO-8859-1"?>

<agents>
	<!-- A list of agents and their behavior classes -->
	
	<!-- #### CENTRALIZED AGENTS ### -->
	<agent name="centralized-random">
		<set class-path="bin/"/>
		<set class-name="template.CentralizedTemplate"/>
	</agent>
	
	<!-- #### CENTRALIZED AGENTS ### -->
	<agent name="centralized-main">
		<set class-path="bin/"/>
		<set class-name="peppo.MyCentralised"/>
		
		<!-- #### timeout margin ### -->
		<set timeout-margin="100"/>
		
		<!-- #### epsilon-greedy strategy ### -->
		<set eps-thresh="0.0"/>
		<set eps-rate="1000.0"/>
	</agent>
	
</agents>
